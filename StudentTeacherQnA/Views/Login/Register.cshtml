@model StudentTeacherQnA.Models.User


<div class="form_wrapper">
    <div class="form_container">
        <div class="title_container">
            <h2><i aria-hidden="true" class="fa fa-user-plus"></i>&nbsp;User Registration Form</h2>
        </div>
        <hr/>
        <form asp-action="Create" asp-controller="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group col-4 my-1">
                    <span><i aria-hidden="true" class="fa fa-envelope"></i>&nbsp;Email</span>
                    <input type="email" name="Email" placeholder="Email" class="form-control col-4" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-4 my-1">
                    <span><i aria-hidden="true" class="fa fa-lock"></i>&nbsp;Password</span>
                    <input type="password" name="Password" placeholder="Password" class="form-control col-4" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-4 my-1">
                    <span><i aria-hidden="true" class="fa fa-lock"></i>&nbsp;Re-type Password</span>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Re-type Password" class="form-control col-4" name="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
                <div class="form-group col-4 my-1">
                    <span><i aria-hidden="true" class="fas fa-user"></i>&nbsp;First Name</span>
                    <input type="text" name="FirstName" placeholder="First Name" class="form-control col-4" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-4 my-1">
                    <span><i aria-hidden="true" class="fas fa-user"></i>&nbsp;Last Name</span>
                    <input type="text" name="LastName" placeholder="Last Name" class="form-control col-4" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-4 my-1">
                    <span><i aria-hidden="true" class="fas fa-book"></i>&nbsp;Institute</span>
                    <input type="text" name="InstituteName" placeholder="Institute Name" class="form-control col-4" />
                </div>
                <div class="form-group col-6 my-1">
                    <span><i aria-hidden="true" class="fas fa-book"></i>&nbsp;Institude Id Number</span>
                    <input type="text" name="InstituteIDCardNumber" placeholder="Institude Id Number" class="form-control col-4" />
                </div>
                <div class="form-group col-6 my-1">
                    <span><i aria-hidden="true" class="fas fa-user-cog"></i>&nbsp;User Type</span>
                    <select class="form-control" name="UserType">
                        <option value="">Select Type</option>
                        <option value="1">Student</option>
                        <option value="2">Teacher</option>
                    </select>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>
                
                <div class="form-group col-12 mt-3">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

